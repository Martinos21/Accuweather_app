<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF00B0FF" Offset="0"/>
                <GradientStop Color="#FF001F52" Offset="1"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <StackLayout Background="{StaticResource BackgroundBrush}">
            <Label x:Name="LocationLabel" HorizontalOptions="Center" FontSize="70"/>
            <Image
                   x:Name="WeatherPicture"
                   WidthRequest="200"
                   HeightRequest="200"
                   HorizontalOptions="Center"/>
            <Label x:Name="TemperatureLabel" HorizontalOptions="Center" FontSize="50"/>
            <!--<Label x:Name="WeatherIconLabel" Text="Weather Icon: " HorizontalOptions="Center"/>-->
            <Label x:Name="HumidityLabel" Text="Humidity: " HorizontalOptions="Center"/>
            <Label x:Name="WindSpeedLabel" Text="Wind Speed: " HorizontalOptions="Center"/>
            <Label x:Name="UVIndexLabel" Text="UV Index: " HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>



